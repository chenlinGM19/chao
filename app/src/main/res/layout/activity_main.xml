<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="48dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_main"
                    android:textColor="@color/text_primary"
                    android:textSize="34sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.05"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/desc_main"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Mode Toggle -->
             <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btnModeLocal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModeLocal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mode_local"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModeExternal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mode_external"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/tvExternalHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mode_external_hint"
                android:textColor="@color/secondary_color"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Playlist Container (Visible only in Local Mode) -->
            <LinearLayout
                android:id="@+id/containerPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Controls Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvPlaylistHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Soundscapes"
                        android:textColor="@color/secondary_color"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear All"
                        android:textColor="@color/accent_error"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

                <!-- Playlist List -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewFiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                    
                    <LinearLayout
                        android:id="@+id/layoutEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:alpha="0.5">
                        
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_add"
                            app:tint="@color/text_secondary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_file_selected"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddFiles"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:text="@string/btn_add_files"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/primary_color"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Pattern Configuration Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIMING CONFIGURATION"
                android:textColor="@color/secondary_color"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Play Duration Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_play_dur"
                    android:textColor="@color/text_primary"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvPlayDurValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10s - 60s"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/sliderPlayDur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:valueFrom="0"
                android:valueTo="360"
                android:stepSize="1"
                app:values="@array/initial_play_range"
                app:tickVisible="false"
                app:thumbColor="@color/primary_color"
                app:trackColorActive="@color/primary_color"
                app:trackColorInactive="@color/surface_light" />

            <!-- Pause Duration Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_pause_dur"
                    android:textColor="@color/text_primary"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvPauseDurValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5s - 20s"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/sliderPauseDur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:valueFrom="0"
                android:valueTo="360"
                android:stepSize="1"
                app:values="@array/initial_pause_range"
                app:tickVisible="false"
                app:thumbColor="@color/primary_color"
                app:trackColorActive="@color/primary_color"
                app:trackColorInactive="@color/surface_light" />

            <!-- Volume Configuration Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_vol_config"
                android:textColor="@color/secondary_color"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- Volume Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_vol_range"
                    android:textColor="@color/text_primary"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvVolRangeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% - 80%"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/sliderVolRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="5"
                app:values="@array/initial_slider_values"
                app:tickVisible="true"
                app:thumbColor="@color/primary_color"
                app:trackColorActive="@color/primary_color"
                app:trackColorInactive="@color/surface_light" />

            <!-- Fluctuation Frequency -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_vol_freq"
                    android:textColor="@color/text_primary"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderVolFreq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:valueFrom="1"
                    android:valueTo="10"
                    android:value="5"
                    android:stepSize="1"
                    app:tickVisible="true"
                    app:thumbColor="@color/primary_color"
                    app:trackColorActive="@color/primary_color"
                    app:trackColorInactive="@color/surface_light" />
                    
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vol_freq_slow"
                        android:textColor="@color/text_hint"
                        android:textSize="10sp"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vol_freq_fast"
                        android:textColor="@color/text_hint"
                        android:textSize="10sp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </FrameLayout>

            <!-- Timer Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SLEEP TIMER / EXPORT DURATION"
                android:textColor="@color/secondary_color"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:textSize="12sp"
                android:textStyle="bold" 
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_panel"
                android:padding="16dp">
                
                <TextView
                    android:id="@+id/tvTimerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop after"
                    android:textColor="@color/text_primary"/>

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvTimerValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:valueFrom="5"
                android:valueTo="120"
                android:value="30"
                android:stepSize="5"
                app:thumbColor="@color/primary_color"
                app:trackColorActive="@color/primary_color"
                app:trackColorInactive="@color/surface_light" />
                
            <!-- Export Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="@string/btn_export"
                android:textColor="@color/primary_color"
                app:icon="@android:drawable/ic_menu_save"
                app:iconTint="@color/primary_color"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/primary_color"
                app:cornerRadius="12dp"/>

            <Space android:layout_width="match_parent" android:layout_height="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Play/Stop -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="@string/btn_start"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary_color"
        app:icon="@android:drawable/ic_media_play"
        app:iconTint="@color/white"
        android:elevation="6dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
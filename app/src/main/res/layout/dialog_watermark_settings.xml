<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watermark Settings"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Switch
            android:id="@+id/swWatermarkEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Watermark"
            android:textColor="#FFFFFF"
            android:checked="true"
            android:minHeight="48dp"/>

        <!-- Style Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Style &amp; Color"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <RadioButton
                android:id="@+id/rbStyleOverlay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Overlay"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbStyleFooter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Footer Frame"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgBgColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <RadioButton
                android:id="@+id/rbBgWhite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="White BG"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbBgBlack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Black BG"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <!-- Content Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <Switch
            android:id="@+id/swShowLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Custom Text"
            android:textColor="#FFFFFF"
            android:checked="true"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/etCustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Logo Text"
            android:text="CAMULATOR"
            android:textColor="#FFFFFF"
            android:textColorHint="#8E8E93"
            android:backgroundTint="#8E8E93"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/swShowTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Time"
            android:textColor="#FFFFFF"
            android:checked="true"
            android:minHeight="48dp"/>

        <Switch
            android:id="@+id/swShowCoords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show GPS Coordinates"
            android:textColor="#FFFFFF"
            android:checked="true"
            android:minHeight="48dp"/>

        <Switch
            android:id="@+id/swShowPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Place Name"
            android:textColor="#FFFFFF"
            android:checked="false"
            android:minHeight="48dp"/>

        <!-- Layout Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alignment"
            android:textColor="#FFFFFF"/>

        <RadioGroup
            android:id="@+id/rgPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <RadioButton
                android:id="@+id/rbPosLeft"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Left"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbPosCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Center"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbPosRight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Right"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Size"
            android:textColor="#FFFFFF"/>
            
        <RadioGroup
            android:id="@+id/rgTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <RadioButton
                android:id="@+id/rbSmall"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="S"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbMedium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="M"
                android:textColor="#FFFFFF"/>
                
            <RadioButton
                android:id="@+id/rbLarge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="L"
                android:textColor="#FFFFFF"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView>